{
  "name": "cms-api",
  "version": "0.3.2",
  "description": "",
  "author": "mutoe <mutoe@foxmail.com>",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mutoe-cms/cms-api"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint '{src,migration,seed,test}/**/*.ts'",
    "test": "pnpm test:unit --coverage && pnpm test:integration",
    "test:unit": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config ./test/jest-e2e.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "pnpm changelog && git add CHANGELOG.md"
  },
  "dependencies": {
    "@nestjs/common": "^9.2.1",
    "@nestjs/core": "^9.2.1",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dayjs": "^1.11.7",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.2",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^4.6.0",
    "typeorm": "^0.3.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@mutoe/eslint-config-preset-jest": "^2.1.0",
    "@mutoe/eslint-config-preset-ts": "^2.2.0",
    "@nestjs/cli": "^9.1.9",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.11",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.33.0",
    "husky": "^7.0.4",
    "jest": "^29.4.1",
    "lint-staged": "^13.1.0",
    "sqlite3": "^5.1.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "{src,migration,seed,test}/**/*.ts": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "src/.*.spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/*.ts",
      "!<rootDir>/src/**/*.{module,dto,ro,strategy,entity,controller,fixture}.ts"
    ],
    "coverageThreshold": {
      "src/**/*.ts": {
        "branches": 70,
        "statements": 80,
        "functions": 80,
        "lines": 70
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "@mutoe/eslint-config-preset-ts",
      "@mutoe/eslint-config-preset-jest"
    ],
    "rules": {
      "no-useless-constructor": "off"
    },
    "overrides": [
      {
        "files": [
          "migration/**"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off",
          "@typescript-eslint/no-unused-vars": "off",
          "@typescript-eslint/no-empty-function": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ]
}
