{
  "name": "cms-api",
  "version": "0.3.2",
  "description": "",
  "author": "mutoe <mutoe@foxmail.com>",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mutoe-cms/cms-api"
  },
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint '{src,migration,seed,test}/**/*.ts'",
    "test": "yarn test:unit --coverage && yarn test:integration",
    "test:unit": "jest",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config ./test/jest-e2e.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "yarn changelog && git add CHANGELOG.md"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/typeorm": "^8.0.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dayjs": "^1.10.6",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "0.2.32 || ^0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nestjs/cli": "^8.1.1",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.6",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.172",
    "@types/node": "^14",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.5",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "{src,migration,seed,test}/**/*.ts": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "src/.*.spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/*.ts",
      "!<rootDir>/src/**/*.{module,dto,ro,strategy,entity,controller,fixture}.ts"
    ],
    "coverageThreshold": {
      "src/**/*.ts": {
        "branches": 70,
        "statements": 80,
        "functions": 80,
        "lines": 70
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "extends": [
      "standard-with-typescript",
      "plugin:jest/recommended"
    ],
    "rules": {
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "no-void": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/strict-boolean-expressions": "off",
      "@typescript-eslint/consistent-type-assertions": "off",
      "@typescript-eslint/no-invalid-void-type": "off",
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "src/**/*.{spec,test}.ts"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "migration/**"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off",
          "@typescript-eslint/no-unused-vars": "off"
        }
      },
      {
        "files": [
          "test/**/*.ts"
        ],
        "rules": {
          "jest/expect-expect": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ]
}
